
.chartinfo{
  width: 92%;
  margin: 0 auto;
  margin-top: 50rpx;
}
.chartleft{
  float: left;
  width: 70%;
}
.charttitle{
  font-size: 40rpx;
  font-weight: bold;
}
.chartbrief{
  margin-top: 20rpx;
  font-size: 30rpx;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
}
.chartright{
  margin-left: 10%;
  float: left;
  width: 20%;
  height: 180rpx;
}
.chartright>image{
  max-width: 100%;
  min-width: 100%;
  max-height: 100%;
  min-height: 100%;
}
.clear{
  clear: both;
}
.chartoperate{
  width: 96%;
  margin: 0 auto;
  border:1rpx solid rgb(121,121,121);
  height: 60rpx;
  margin-top: 60rpx;
}
.charttime{
  float: left;
  margin-left: 10rpx;
  font-size: 26rpx;
  line-height: 60rpx;
}
.chartbtn{
  float: right;
  font-size: 30rpx;
  margin-right: 40rpx;
  line-height: 60rpx;
}
